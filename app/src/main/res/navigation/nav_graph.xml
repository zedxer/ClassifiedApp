<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listingFragment">

    <fragment
        android:id="@+id/listingFragment"
        android:name="com.naqi.classifiedapp.fragments.listing.ListingFragment"
        android:label="Item Listing"
        tools:layout="@layout/listing_fragment" >
        <action
            android:id="@+id/action_listingFragment_to_itemDetailFragment"
            app:destination="@id/itemDetailFragment" />

    </fragment>
    <fragment
        android:id="@+id/itemDetailFragment"
        android:name="com.naqi.classifiedapp.fragments.item_details.ItemDetailFragment"
        android:label="Item Detail"
        tools:layout="@layout/item_detail_fragment" />
</navigation>